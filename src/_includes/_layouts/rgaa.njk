{% include "_components/header.njk" %}
<main role="main">
  <div class="fr-container fr-mt-4w fr-mb-4w">
    <div class="fr-grid-row">
      <div class="fr-col">
        <h1>{{ title }}</h1>
        {{ content | safe }}
        {% set currentTheme = "" %}

        {% for critere in collections.criteresRgaa %}
          {% if currentTheme != critere.data.theme %}
            </ul>
            <h2>{{ critere.data.theme }}</h2>
            <ul>
            {% set currentTheme = critere.data.theme %}
          {% endif %}
          <li><strong>{{ critere.data.id }}</strong> {{ critere.data.title }}</li>

        {% endfor %}
      </div>
    </div>
  </div>  
</main>
{% include "_components/footer.njk" %}




