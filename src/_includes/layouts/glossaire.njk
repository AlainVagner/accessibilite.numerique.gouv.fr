{% extends './base.njk' %}

{% block contenu %}
	<dl>
	{% for g in collections.glossary %}
		{% set term = g.term %}
		{% set letter = term.data.title | truncate(1, true, "") %}

		<dt class="fr-h5" id="{{ term.data.slug }}">{{ term.data.title }}</dt>
		<dd class="annexes fr-mb-4w">{{ term.templateContent  | safe }}</dd>
	{% endfor %}
	</dl>
{% endblock %}


